<?xml version="1.0" encoding="UTF-8"?>
<project name="JeudeGO" default="run" basedir="." >

<property name="src.dir"     value="C:\Users\Nicolas\Documents\NetBeansProjects\JeudeGO\src"/>
<property name="bin.dir"   value="C:\Users\Nicolas\Documents\NetBeansProjects\JeudeGO\bin"/>
<property name="jar.dir" value="C:\Users\Nicolas\Documents\NetBeansProjects\JeudeGO\exe"/>
<property name="test.dir" value="C:\Users\Nicolas\Documents\NetBeansProjects\JeudeGO\test"/>
<property name="main-class"  value="jeudego.JeudeGo"/>
<description>Utilisation de ant pour le projet de jeu de go.</description>

<target name="clean">
<delete dir="${bin.dir}"/>
<delete dir="${jar.dir}"/>
<echo message="nettoyage termine"/>
</target>

<target name="compile" depends="clean">
<mkdir dir="${bin.dir}"/>
<javac srcdir="${src.dir}" destdir="${bin.dir}"/>
<javac srcdir="${test.dir}" destdir="${bin.dir}" />
<echo message="compilation terminee"/>
</target>

<target name="jar" depends="compile">
<mkdir dir="${jar.dir}"/>
	<jar destfile="${jar.dir}/jeudeGo.jar" basedir="${bin.dir}">
		<manifest>
			<attribute name="Main-Class" value="${main-class}"/>
		</manifest>
	</jar>
<echo message="Creation du fichier Jar terminee"/>
</target>

<target name="run" depends="jar">
<java jar="${jar.dir}/jeudeGo.jar" fork="true"/>
</target>

</project>
